package main

import (
	"github.com/algor512/feeder/utils"
	"github.com/algor512/feeder/utils/rss"
	"github.com/algor512/feeder/utils/telegram"
)

func createYoutubeSource(name, channelId string, tags... string) *rss.RssSource {
	url := "https://www.youtube.com/feeds/videos.xml?channel_id=" + channelId
	tags = append(tags, "youtube")
	return &rss.RssSource{name, url, tags}
}

func createRssSource(name, url string, tags... string) *rss.RssSource {
	return &rss.RssSource{name, url, append(tags, "rss")}
}

func getConfig() []utils.Source {
	return []utils.Source{
		// rss
		createRssSource("Linux Kernel", "https://www.kernel.org/feeds/kdist.xml", "it", "linux"),	

		// reddit
		createRssSource("Reddit CommandLine", "https://www.reddit.com/r/commandline/new/.rss", "it", "linux", "reddit"),
		createRssSource("Reddit Suckless", "https://www.reddit.com/r/suckless/new/.rss", "it", "linux", "reddit"),

		// youtube
		createYoutubeSource("FSF Europe", "UC68ldbHwL_-5qzETqOaAMWQ", "it", "foss"),

		// Telegram
		&telegram.TelegramSource{"Telegram News", "telegram", []string{"telegram"}},
	}
}
